<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<?import fr.univ_amu.iut.components.SwitchToPaneButton?>
<?import fr.univ_amu.iut.components.SwitchToPlayButton?>

<BorderPane id="home_logged" xmlns="http://javafx.com/javafx/17" >
    <bottom>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50" BorderPane.alignment="CENTER">
            <SwitchToPaneButton id="switchToPaneButtonPracticeLogged" styleClass="bar_button" userData="fxml/practice_menu.fxml">
                <graphic>
                    <ImageView fitHeight="60" fitWidth="60" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../pictures/practice_button.png"/>
                    </ImageView>
                </graphic>
            </SwitchToPaneButton>
            <SwitchToPlayButton id="switchToPaneButtonGameLogged" styleClass="bar_button" userData="1,game">
                <graphic>
                    <ImageView fitHeight="60" fitWidth="60" pickOnBounds="true" preserveRatio="true">
                        <HBox.margin>
                            <Insets/>
                        </HBox.margin>
                        <Image url="@../pictures/play_button.png"/>
                    </ImageView>
                </graphic>
            </SwitchToPlayButton>
        </HBox>
    </bottom>
</BorderPane>