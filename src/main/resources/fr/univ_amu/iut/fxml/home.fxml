<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<?import fr.univ_amu.iut.components.SwitchToPaneButton?>

<BorderPane id="home" xmlns="http://javafx.com/javafx/17">
   <right>
      <HBox alignment="TOP_CENTER">
         <BorderPane.margin>
            <Insets top="20"/>
         </BorderPane.margin>
         <SwitchToPaneButton id="switchToPaneButtonLogin" styleClass="bar_button" userData="fxml/login.fxml">
            <graphic>
               <ImageView fitHeight="60" fitWidth="60" pickOnBounds="true" preserveRatio="true">
                  <Image url="@../pictures/login_button.png"/>
               </ImageView>
            </graphic>
         </SwitchToPaneButton>
      </HBox>
   </right>
   <bottom>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50" BorderPane.alignment="CENTER">
         <SwitchToPaneButton id="switchToPaneButtonPractice" styleClass="bar_button" userData="fxml/login.fxml">
            <graphic>
               <ImageView fitHeight="60" fitWidth="60" pickOnBounds="true" preserveRatio="true">
                  <Image url="@../pictures/practice_button.png"/>
               </ImageView>
            </graphic>
         </SwitchToPaneButton>
         <SwitchToPaneButton id="switchToPaneButtonRoomLogged" styleClass="bar_button" userData="fxml/login.fxml">
            <graphic>
               <ImageView fitHeight="60" fitWidth="60" pickOnBounds="true" preserveRatio="true">
                  <Image url="@../pictures/multiplayer_button.png"/>
               </ImageView>
            </graphic>
         </SwitchToPaneButton>
         <SwitchToPaneButton id="switchToPaneButtonGame" styleClass="bar_button" userData="fxml/login.fxml">
            <graphic>
               <ImageView fitHeight="60" fitWidth="60" pickOnBounds="true" preserveRatio="true">
                  <HBox.margin>
                     <Insets/>
                  </HBox.margin>
                  <Image url="@../pictures/play_button.png"/>
               </ImageView>
            </graphic>
         </SwitchToPaneButton>
      </HBox>
   </bottom>
</BorderPane>
